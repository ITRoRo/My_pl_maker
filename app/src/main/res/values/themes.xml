<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPlMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>

        <item name="android:tint">@color/gray_text</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_text</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IconMyPlMaker" parent="Theme.MyPlMaker">
        <item name="android:tint">@color/gray_text</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
