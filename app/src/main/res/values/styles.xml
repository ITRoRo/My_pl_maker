<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/sixteen_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">22sp</item>
        <item name="cornerRadius">@dimen/sixteen_dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">1dp</item>
        <item name="iconTint">@color/black_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyleSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/sixteen_dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:tint">@color/gray_text</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:theme">@style/Theme.IconMyPlMaker</item>

    </style>

    <style name="Icon" parent="ButtonStyleSetting">
        <item name="android:theme">@style/Theme.IconMyPlMaker</item>


    </style>

    <style name="LinearLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>


    </style>

    <style name="BaseTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/twenty_two_sp</item>
        <item name="android:theme">@style/Theme.TextPlaylistMaker</item>
    </style>

    <style name="Textt">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>

    </style>

    <style name="TextTrackView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_B4_FF</item>
        <item name="android:textSize">@dimen/twelve_dp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>

    </style>

    <style name="TextNoInternet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_FF_B22</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/nineteen_sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginVertical">@dimen/eight_dp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
</resources>

