<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bottom_sheet_indicator"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/for4_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="@drawable/bottom_sheet_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tracks_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_indicator"
        tools:itemCount="4"
        tools:listitem="@layout/track_view"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/placeholder_empty_tracks"
        style="@style/TextNoInternet"
        android:layout_marginTop="@dimen/forty_for_44dp"
        android:text="@string/no_track_pl"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_indicator"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>