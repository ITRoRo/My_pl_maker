<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/back" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/sixteen_dp"
            android:text="@string/nas"
            android:textColor="@color/black_text"
            android:textSize="22sp" />

    </LinearLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:checked="false"
        android:gravity="center_vertical"

        android:paddingHorizontal="@dimen/sixteen_dp"
        android:paddingVertical="20dp"
        android:switchMinWidth="56dp"
        android:text="@string/black_tm"
        android:textSize="16sp"
        android:thumbTint="@color/switch_thumb_color"
        android:trackTint="@color/switch_track_color"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/comm"
        android:paddingHorizontal="@dimen/sixteen_dp"
        android:paddingVertical="20dp"
        android:text="@string/share"
        android:textColor="@color/black_text"
        android:textSize="16sp"

        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/tell"
        android:paddingHorizontal="@dimen/sixteen_dp"
        android:paddingVertical="20dp"
        android:text="@string/support"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/go"
        android:paddingHorizontal="@dimen/sixteen_dp"
        android:paddingVertical="20dp"
        android:text="@string/agreement"
        android:textColor="@color/black_text"
        android:textSize="16sp" />


</LinearLayout>


