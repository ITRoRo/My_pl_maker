<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_B22_FF"
    tools:context=".playlist.fragment.NewPlaylistFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_new_playlist"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/back"
        app:title="@string/new_playlist"
        app:titleTextColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_button"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/thirty_two_32dp"
        android:backgroundTint="@color/input_field_colors_hint"
        android:enabled="false"
        android:paddingVertical="@dimen/fourteen_dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp"
        app:cornerRadius="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_new_playlist"
        app:layout_constraintBottom_toTopOf="@id/create_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/zero_dp"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/thirty_two_32dp"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_add_photo_background"
                android:src="@drawable/group_180"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/thirty_two_32dp"
                android:hint="@string/playlist_name"
                android:textColorHint="@color/color_FF_B22"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/input_field_colors_box_stroke"
                app:hintTextColor="@color/input_field_colors_hint"
                app:layout_constraintTop_toBottomOf="@id/cover_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:fontFamily="@font/ys_display_regular"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_FF_B22"
                    android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:hint="@string/playlist_description"
                android:textColorHint="@color/color_FF_B22"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/input_field_colors_box_stroke"
                app:hintTextColor="@color/input_field_colors_hint"
                app:layout_constraintTop_toBottomOf="@id/name_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="@color/color_FF_B22"
                    android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>